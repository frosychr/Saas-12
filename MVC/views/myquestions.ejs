<body>
<%- include('includes/navigation.ejs') %>

<main>
    <h1 class = "landing_title"> My Questions</h1>
    <div>
    <% if (quest.length > 0) { %>
        <p class="center1"> <b>Total Questions: </b><%=quest.length %>  </p>
        <% for(let question of quest) { %>
            <div class = "container">
                <p> <b>Title: </b><%=question.title %>  </p>
                <p><b>Question: </b><%=question.subject %></p>
                <p><b>Keywords: </b><%=question.keywords %></p>
            </div>
        <% }%>
    <% }
    else{ %>
        <h2> No questions yet!</h2>
    <% }%>
    </div>
</main>

